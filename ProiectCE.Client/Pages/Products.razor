@page "/products"
@using ProiectCE.Client.Models
@inject HttpClient Http

<PageTitle>Catalog Produse</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Catalog Produse</h1>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <input @bind="searchText" class="form-control" placeholder="Caută produs..." @bind:event="oninput" @onkeyup="HandleSearch" />
                <button class="btn btn-primary" @onclick="SearchProducts">Caută</button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2">Se încarcă produsele din baza de date...</p>
        </div>
    }
    else if (products == null || products.Length == 0)
    {
        <div class="alert alert-warning">
            Nu s-au găsit produse în baza de date.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-transparent border-0 pt-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <span class="badge bg-info text-dark">
                                    @(product.Category != null ? product.Category.Name : "Fără Categorie")
                                </span>
                                <h5 class="card-title mb-0 ms-2">@product.Name</h5>
                            </div>
                        </div>

                        <div class="card-body">
                            <h4 class="text-primary">@product.Price RON</h4>
                            <p class="card-text text-muted small">@product.Description</p>
                            <div class="mt-3">
                                <small class="d-block text-muted"><strong>Furnizor:</strong> @product.Supplier</small>
                                <small class="d-block text-muted"><strong>Stoc:</strong> @product.Stock buc.</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private Product[]? products;
    private string searchText = "";
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        try
        {
            // ATENȚIE: Verifică dacă 7051 este portul corect al Backend-ului tău!
            // Dacă Swagger se deschide pe alt port, schimbă aici.
            products = await Http.GetFromJsonAsync<Product[]>("https://localhost:7051/api/Products");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Eroare la conectarea cu API: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchProducts()
    {
        if (string.IsNullOrWhiteSpace(searchText))
        {
            await LoadProducts();
        }
        else
        {
            try
            {
                products = await Http.GetFromJsonAsync<Product[]>($"https://localhost:7051/api/Products/search/{searchText}");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Eroare la căutare: {ex.Message}");
            }
        }
    }

    private async Task HandleSearch(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await SearchProducts();
    }
}